<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PruebaT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:buttonStyle">@style/miBoton</item>

    </style>

    <style name="Theme.PruebaT" parent="Base.Theme.PruebaT" />


    //style titles
    <style name="title_white">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    //style edit text
    <style name="custom_edit_text_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/error_editText</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    //custom button
    <style name="miBoton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>